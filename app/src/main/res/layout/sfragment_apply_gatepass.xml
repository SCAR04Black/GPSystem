<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    tools:context=".SFragmentApplyGatepass">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lHeading"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Apply for Gate Pass"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:textColor="#565656"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_below="@id/lHeading"
        android:id="@+id/typeSelector"
        android:layout_margin="7dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="45dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@id/typeSelector"
        android:id="@+id/vPurpose"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/visitPurpose"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Purpose of Visit"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:singleLine="true" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/vPurpose"
        android:id="@+id/sTime"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/iTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:background="#2b72ad"
                android:text="IN Time"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/oTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#2b72ad"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:text="OUT Time"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/sTime"
        android:id="@+id/sDate"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/iDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:background="#2b72ad"
                android:text="IN Date"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/oDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#2b72ad"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:text="OUT Date"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/sDate"
        android:id="@+id/rSubmit"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/rSubmitR"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="#2b72ad"
                android:text="    Submit Request    "
                android:textColor="@android:color/white"
                android:textStyle="bold"/>


    </FrameLayout>


    </RelativeLayout>

</FrameLayout>
